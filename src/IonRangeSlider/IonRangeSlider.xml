<?xml version="1.0" encoding="utf-8" ?>
<widget id="IonRangeSlider.widget.IonRangeSlider" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>IonRangeSlider</name>
    <description>The description of this widget.</description>

    <icon></icon>

    <properties>
        <property key="sliderType" type="enumeration" defaultValue="single">
            <caption>Slider Type</caption>
            <category>Behaviour</category>
            <description>Type of slider</description>
            <enumerationValues>
                <enumerationValue key="single">Single</enumerationValue>
                <enumerationValue key="double">Double</enumerationValue>
            </enumerationValues>
        </property>
        <property key="dataSource" type="enumeration" defaultValue="attribute">
            <caption>Data Source</caption>
            <category>Behaviour</category>
            <description>How the slider data is sourced. Attribute = Slider values are linked to attributes, Association = Slider values come from a reference set association.</description>
            <enumerationValues>
                <enumerationValue key="attribute">Attribute</enumerationValue>
                <enumerationValue key="association">Association</enumerationValue>
            </enumerationValues>
        </property>
        <property key="showGrid" type="boolean" required="true" defaultValue="true">
            <caption>Show Grid</caption>
            <category>Behaviour</category>
            <description>Enables grid of values.</description>
        </property>
        <property key="from" type="attribute" required="false">
            <caption>From</caption>
            <category>Attribute Config</category>
            <description>Attribute holding the value for the left handle (or for single handle). If data is sourced from a microflow this holds the index of the selected value.</description>
            <attributeTypes>
                <attributeType name="Integer"/>
            </attributeTypes>
        </property>
        <property key="to" type="attribute" required="false">
            <caption>To</caption>
            <category>Attribute Config</category>
            <description>Attribute holding the value for the right handle. If data is sourced from a microflow this holds the index of the selected value.</description>
            <attributeTypes>
                <attributeType name="Integer"/>
            </attributeTypes>
        </property>
        <property key="minDefault" type="integer" required="true" defaultValue="10">
            <caption>Min (Default)</caption>
            <category>Attribute Config</category>
            <description>Default slider minimum value</description>
        </property>
        <property key="min" type="attribute" required="false">
            <caption>Min</caption>
            <category>Attribute Config</category>
            <description>Slider minimum value from an attribute</description>
            <attributeTypes>
                <attributeType name="Integer"/>
            </attributeTypes>
        </property>
        <property key="maxDefault" type="integer" required="true" defaultValue="100">
            <caption>Max </caption>
            <category>Attribute Config</category>
            <description>Default slider maximum value</description>
        </property>
        <property key="max" type="attribute" required="false">
            <caption>Max</caption>
            <category>Attribute Config</category>
            <description>Slider maximum value from an attribute</description>
            <attributeTypes>
                <attributeType name="Integer"/>
            </attributeTypes>
        </property>
        <property key="stepDefault" type="integer" required="true" defaultValue="1">
            <caption>Step </caption>
            <category>Attribute Config</category>
            <description>Default slider step.</description>
        </property>
        <property key="step" type="attribute" required="false">
            <caption>Step</caption>
            <category>Attribute Config</category>
            <description>Slider step</description>
            <attributeTypes>
                <attributeType name="Integer"/>
            </attributeTypes>
        </property>
        <property key="valueAssociation" type="entity" required="false" isPath="yes" pathType="referenceSet">
            <caption>Value Association</caption>
            <category>Association Config</category>
            <description>Select the entity (over a reference set) that represents a slider value.</description> 
        </property>
        <property key="valueAttribute" type="attribute" required="false" entityProperty="valueAssociation">
            <caption>Value Attribute</caption>
            <category>Association Config</category>
            <description>Attribute that holds the value of the slider item. If this, load microflow and value entity are set up, min, max and step properties are ignored.</description>
            <attributeTypes>
                <attributeType name="String"/>
                <attributeType name="Integer"/>
                <attributeType name="Decimal"/>
            </attributeTypes>
        </property> 
        <property key="_sortContainer" type="object" isList="true" required="false">
            <caption>Sort order</caption>
            <category>Association Config</category>
            <description>The sort order of the objects</description>
            <properties>
                <property key="sortAttribute" type="attribute" isPath="optional" pathType="reference" entityProperty="../valueAssociation">
                    <caption>Attribute</caption>
                    <category>Data source</category>
                    <description>An attribute to sort on</description>
                    <attributeTypes>
                        <attributeType name="AutoNumber"/>
                        <attributeType name="Boolean"/>
                        <attributeType name="Currency"/>
                        <attributeType name="DateTime"/>
                        <attributeType name="Enum"/>
                        <attributeType name="Float"/>
                        <attributeType name="Integer"/>
                        <attributeType name="Long"/>
                        <attributeType name="String"/>
                    </attributeTypes>
                </property>
                <property key="sortOrder" type="enumeration" defaultValue="asc">
                    <caption>Order</caption>
                    <category>Data source</category>
                    <description>The order in which to sort</description>
                    <enumerationValues>
                        <enumerationValue key="asc">Ascending</enumerationValue>
                        <enumerationValue key="desc">Descending</enumerationValue>
                    </enumerationValues>
                </property>
            </properties>
        </property>
        <property key="fromAssociation" type="entity" required="false" isPath="yes" pathType="reference">
            <caption>From Association</caption>
            <category>Association Config</category>
            <description>Select the association that represents the selected from value</description> 
        </property>
        <property key="toAssociation" type="entity" required="false" isPath="yes" pathType="reference">
            <caption>To Association</caption>
            <category>Association Config</category>
            <description>Select the association that represents the selected from value</description> 
        </property>
    </properties>
</widget>
